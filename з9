pascal
program RemoveElements;

const
  SIZE = 20;

var
  arr: array[1..SIZE] of integer;
  i, minIndex, firstPositive: integer;

begin
  // Заполнение массива случайными числами
  randomize;
  for i := 1 to SIZE do
  begin
    arr[i] := random(100) - 50; // Генерация чисел от -50 до 49
    write(arr[i], ' ');
  end;
  
  // Поиск индекса первого положительного элемента
  firstPositive := 0;
  for i := 1 to SIZE do
  begin
    if arr[i] > 0 then
    begin
      firstPositive := i;
      break;
    end;
  end;
  
  // Удаление первого положительного элемента
  if firstPositive > 0 then
  begin
    for i := firstPositive to SIZE-1 do
    begin
      arr[i] := arr[i+1];
    end;
    SIZE := SIZE - 1;
  end;
  
  // Поиск индекса наименьшего элемента
  minIndex := 1;
  for i := 2 to SIZE do
  begin
    if arr[i] < arr[minIndex] then
      minIndex := i;
  end;
  
  // Удаление наименьшего элемента
  for i := minIndex to SIZE-1 do
  begin
    arr[i] := arr[i+1];
  end;
  SIZE := SIZE - 1;
  
  writeln;
  
  // Вывод измененного массива
  for i := 1 to SIZE do
  begin
    write(arr[i], ' ');
  end;
  
  readln;
end.
